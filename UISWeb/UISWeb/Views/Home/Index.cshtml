@{
    ViewData["Title"] = "Home Page";
}

<table width="100%" border="0">
    <tr>
        <td width="300"><img src="~/images/uis-organic-laboratory-logo.png" alt="UISOL" class="img-responsive" /></td>
        <td></td>
        <td width="524">
            <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="~/images/UIS-Slider1.jpg" alt="Banner1" class="img-responsive" />
                        <div class="carousel-caption" role="option">
                            <h3>WELCOME TO UIS ORGANIC LABORATORY</h3>
                            <p style="font-size:12pt">
                                We specialize in petroleum contamination, and offer a state of the art organic laboratory that specializes in petroleum and waste analyses to local and international standards
                            </p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/images/UIS-Slider2.jpg" alt="Banner2" class="img-responsive" />
                        <div class="carousel-caption" role="option">
                            <h3>ORGANIC ANALYSIS</h3>
                            <p style="font-size:12pt">
                                Using accredited standards and methods we provide an accurate and quality result
                            </p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/images/UIS-Slider3.jpg" alt="Banner3" class="img-responsive" />
                        <div class="carousel-caption" role="option">
                            <h3>INTERNATIONALLY ACCREDITED</h3>
                            <p style="font-size:12pt">
                                As the country’s leading organic and testing facility we have developed a range of standard analytical methods and highly specialised tests, particularly for petroleum contamination.
                            </p>
                        </div>
                    </div>
                </div>
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </td>
    </tr>
</table>
<div class="row">
    <div class="col-md-3">
        <h2>Usage</h2>
        <ul>
            <li>Register with email address</li>
            <li>Loggen in users can access 'Reports' on the menu</li>
            <li>Use 'Reports' to view progress on requests</li>
            <li>Download reports using the 'Download' link</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Links</h2>
        <ul>
            <li><a href="http://www.uisol.co.za">UISOL</a></li>
        </ul>
    </div>
</div>
